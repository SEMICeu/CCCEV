<?xml version="1.0" encoding="UTF-8"?>
<!-- the default and target namespaces are temporary until a final (P)URI policy is defined and adopted. -->
<xsd:schema xmlns="http://www.w3.org/ns/org#"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:org="http://www.w3.org/ns/org#"
	xmlns:foaf="http://xmlns.com/foaf/0.1/"
	xmlns:skos="http://www.w3.org/2004/02/skos/core#"
	targetNamespace="http://www.w3.org/ns/org#" 
	elementFormDefault="qualified" 
	attributeFormDefault="unqualified" version="2.0.0">
	
	<xsd:import namespace="http://xmlns.com/foaf/0.1/" schemaLocation="../../../foaf/2.0.0/xml/foaf.xsd"/>
	<xsd:import namespace="http://www.w3.org/2004/02/skos/core#" schemaLocation="../../../skos/2.0.0/xml/skos.xsd"/>
	
	<!-- Element declaration -->
	
	<xsd:element name="Organization" type="OrganizationType"/>
	<xsd:element name="FormalOrganization" type="FormalOrganizationType"/>
	
	<!-- Element definition -->

	
	<xsd:complexType name="OrganizationType">
		<xsd:complexContent>
			<xsd:extension base="foaf:OrganizationType">
				<xsd:sequence>
					<xsd:element ref="skos:prefLabel" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element ref="skos:altLabel" minOccurs="0" maxOccurs="unbounded"/>
				</xsd:sequence>
			</xsd:extension>		
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:complexType name="FormalOrganizationType">
		<xsd:complexContent>
			<xsd:extension base="foaf:OrganizationType">
				<xsd:sequence>
				</xsd:sequence>
			</xsd:extension>		
		</xsd:complexContent>
	</xsd:complexType>
	
</xsd:schema>
