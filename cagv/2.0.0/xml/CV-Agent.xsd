	<!-- Element definition -->
	
	<xsd:group name="Agent">
		<xsd:sequence>
			<xsd:element ref="cbc:ID" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Alias" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Role" minOccurs="0" maxOccurs="1"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:group name="Role">
		<xsd:sequence>
			<xsd:element ref="cbc:Name" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="cbc:Description" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="cbc:Type" minOccurs="0" maxOccurs="1"/>
			<xsd:element ref="PlayedByAgentIDRef" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="ContactPoint" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:complexType name="AgentType">
		<xsd:sequence>
			<xsd:group ref="Agent"/>
			<xsd:group ref="Role"/>
		</xsd:sequence>
	</xsd:complexType>
	
