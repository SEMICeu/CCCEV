<?xml version="1.0" encoding="UTF-8" ?>
<xsd:schema xmlns="urn:eu:toop:ns:dataexchange-1p40"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:cac="https://data.europa.eu/semanticassets/ns/cv/common/cac_v2.0.1#"
  xmlns:cbc="https://data.europa.eu/semanticassets/ns/cv/common/cbc_v2.0.1#"
  xmlns:cccev="https://data.europa.eu/semanticassets/ns/cv/cccev_v2.0.1#"
  xmlns:dcat-ap="http://data.europa.eu/r5r/"
  xmlns:foaf="http://xmlns.com/foaf/0.1/"
  targetNamespace="urn:eu:toop:ns:dataexchange-1p40" version="specsVersion1.4.0"
  elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xsd:import namespace="http://xmlns.com/foaf/0.1/"
    schemaLocation="../../foaf/2.0.1/xml/foaf_semic-cbc.xsd"/>
  <xsd:import namespace="http://data.europa.eu/r5r/"
    schemaLocation="../../dcat-ap/2.0.1/xml/dcat-ap_semic-cbc.xsd"/>
  <xsd:import namespace="https://data.europa.eu/semanticassets/ns/cv/cccev_v2.0.1#"
    schemaLocation="../../cccev/2.0.1/xml/xsdrt/cccev-2.0.1.xsd"/>
  <xsd:import namespace="https://data.europa.eu/semanticassets/ns/cv/common/cac_v2.0.1#"
    schemaLocation="../../common/2.0.1/xml/xsdrt/CV-CommonAggregateComponents.xsd"/>
  <xsd:import namespace="https://data.europa.eu/semanticassets/ns/cv/common/cbc_v2.0.1#"
    schemaLocation="../../common/2.0.1/xml/xsdrt/CV-CommonBasicComponents.xsd"/>

  <!--alternative ROOT elements-->
  <xsd:element name="Request" type="TOOPRequestType"/>
  <xsd:element name="Response" type="TOOPResponseType"/>
  <!--element declaration-->
  <xsd:element name="AdditionalDocumentReference" type="cccev:DocumentReferenceType"/>
  <xsd:element name="AdministrativeUnit" type="cbc:TextType"/>
  <xsd:element name="AlternativeLegalPersonIdentifier" type="cbc:IDType"/>
  <xsd:element name="AlternativeNaturalPersonIdentifier" type="cbc:IDType"/>
  <xsd:element name="AuthorizedRepresentativeIdentifier" type="cbc:IDType"/>
  <xsd:element name="BirthDate" type="cbc:DateType"/>
  <xsd:element name="BirthFamilyName" type="cbc:NameType"/>
  <xsd:element name="BirthPlace" type="cbc:NameType"/>
  <xsd:element name="BusinessCodes" type="cbc:IDType"/>
  <xsd:element name="Category" type="cbc:CodeType"/>
  <xsd:element name="Code" type="cbc:CodeType"/>
  <xsd:element name="ConsentToken" type="cbc:BinaryObjectType"/>
  <xsd:element name="ContactDetails" type="foaf:AgentType"/>
  <xsd:element name="Constraint" type="cccev:ConstraintType"/>
  <xsd:element name="CopyIndicator" type="cbc:IndicatorType"/>
  <xsd:element name="DataConsumer" type="DataConsumerType"/>
  <xsd:element name="DataConsumerCountry" type="cbc:CodeType"/>
  <xsd:element name="DataConsumerDocument" type="cbc:IDType"/>
  <xsd:element name="DataConsumerElectronicAddress" type="cbc:IDType"/>
  <xsd:element name="DataConsumerGlobalSession" type="cbc:IDType"/>
  <xsd:element name="DataConsumerRequestPurpose" type="cbc:TextType"/>
  <xsd:element name="DataProvider" type="foaf:AgentType"/>
  <xsd:element name="DataProviderCountry" type="cbc:CodeType"/>
  <xsd:element name="DataProviderElectronicAddress" type="cbc:IDType"/>
  <xsd:element name="DataProviderID" type="cbc:IDType"/>
  <xsd:element name="DataRequestAuthorisation" type="DataRequestAuthorisationType"/>
  <xsd:element name="DataRequest" type="cbc:IDType"/>
  <xsd:element name="DataRequestSubject" type="DataRequestSubjectType"/>
  <xsd:element name="DocumentType" type="cbc:IDType"/>
  <xsd:element name="EORIIdentifier" type="cbc:IDType"/>
  <xsd:element name="Error" type="ErrorType"/>
  <xsd:element name="ErrorCode" type="cbc:CodeType"/>
  <xsd:element name="ErrorIndicator" type="cbc:IndicatorType"/>
  <xsd:element name="Evidence" type="cccev:EvidenceType"/>
  <xsd:element name="EvidenceRequest" type="EvidenceRequestType"/>
  <xsd:element name="EvidenceResponse" type="EvidenceResponseType"/>
  <xsd:element name="EvidenceType" type="cccev:EvidenceTypeType"/>
  <xsd:element name="FamilyName" type="cbc:NameType"/>
  <xsd:element name="FirstName" type="cbc:NameType"/>
  <xsd:element name="GenderCode" type="cbc:CodeType"/>
  <xsd:element name="ID" type="cbc:IDType"/>
  <xsd:element name="Requirement" type="cccev:RequirementType"/>
  <xsd:element name="IssueDate" type="cbc:DateTimeType"/>
  <xsd:element name="IssuePlace" type="cbc:TextType"/>
  <xsd:element name="LegalAddress" type="cac:AddressType"/>
  <xsd:element name="LegalEntityIdentifier" type="cbc:IDType"/>
  <xsd:element name="LegalName" type="cbc:NameType"/>
  <xsd:element name="LegalPerson" type="foaf:AgentType"/>
<!--  <xsd:element name="LegalPersonLegalAddress" type="cac:AddressType"/>-->
  <xsd:element name="LegalReference" type="cbc:TextType"/>
  <xsd:element name="Name" type="cbc:NameType"/>
  <xsd:element name="NaturalPerson" type="foaf:AgentType"/>
<!--  <xsd:element name="NaturalPersonLegalAddress" type="cac:AddressType"/>-->
  <xsd:element name="Origin" type="cbc:CodeType"/>
  <xsd:element name="Process" type="cbc:IDType"/>
  <xsd:element name="Criterion" type="cccev:CriterionType"/>
  <xsd:element name="Remarks" type="cbc:TextType"/>
  <xsd:element name="RoutingInformation" type="RoutingInformationType"/>
  <xsd:element name="SEEDIdentifier" type="cbc:IDType"/>
  <xsd:element name="Severity" type="cbc:CodeType"/>
  <xsd:element name="Specification" type="cbc:IDType"/>
  <xsd:element name="StandardIndustrialClassification" type="cbc:CodeType"/>
  <xsd:element name="TaxReferenceNumber" type="cbc:IDType"/>
  <xsd:element name="Type" type="cbc:CodeType"/>
  <xsd:element name="UniqueIdentifier" type="cbc:IDType"/>
  <xsd:element name="ValidityPeriod" type="cac:PeriodType"/>
  <xsd:element name="Value" type="cccev:ValueType"/>
  <xsd:element name="VATRegistrationNumber" type="cbc:IDType"/>

  <!--************************** -->
  <!--COMMON elements start here -->

  <!-- Abstract base class containing elements common to both the TOOP EDM Request and the EDM Response -->
  <xsd:complexType name="EDMType">
    <xsd:complexContent>
      <xsd:extension base="dcat-ap:DatasetType">
        <xsd:sequence>
          <xsd:element ref="RoutingInformation" minOccurs="0" maxOccurs="1"/>
          <xsd:element ref="DataRequestAuthorisation" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="RoutingInformationType">
    <xsd:sequence>
      <xsd:element ref="DocumentType"/>
      <xsd:element ref="Process"/>
      <xsd:element ref="DataConsumerElectronicAddress"/>
      <xsd:element ref="DataConsumerCountry"/>
      <xsd:element ref="DataProviderElectronicAddress" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="DataProviderCountry"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="PreferredDocumentMimeTypeCodeType">
    <xsd:simpleContent>
      <xsd:extension base="cbc:CodeType">
        <xsd:attribute name="priority" type="xsd:decimal" use="optional"/>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:complexType name="DataConsumerType">
    <xsd:complexContent>
      <xsd:extension base="foaf:AgentType">
        <xsd:sequence/>        
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="DataRequestAuthorisationType">
    <xsd:sequence>
      <xsd:element ref="ConsentToken" minOccurs="0" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>


  <xsd:complexType name="DataRequestSubjectType">
    <xsd:sequence>
      <xsd:element ref="Type"/>
      <xsd:element ref="LegalPerson" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="NaturalPerson" minOccurs="0" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="EvidenceRequestType">
    <xsd:sequence>
      <xsd:element ref="ID"/>
      <xsd:element ref="ErrorCode" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="ErrorIndicator" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="IssueDate"/>
      <xsd:element ref="IssuePlace" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="LegalReference" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Name" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Remarks" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Requirement" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="ValidityPeriod" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="ErrorType">
    <xsd:sequence>
      <xsd:element ref="Category"/>
      <xsd:element ref="Code"/>
      <xsd:element ref="Origin"/>
      <xsd:element ref="DataProviderID" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="Severity"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="EvidenceResponseType">
    <xsd:sequence>
      <xsd:element ref="ID" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="ErrorCode" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="ErrorIndicator" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="IssueDate" minOccurs="0"/>
      <xsd:element ref="IssuePlace" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="LegalReference" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Name" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Remarks" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="ValidityPeriod" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Requirement" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element ref="Value" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

<!--  <xsd:complexType name="LegalPersonType">
    <xsd:sequence>
      <xsd:element ref="ID"/>
      <xsd:element ref="LegalName"/>
      <xsd:element ref="VATRegistrationNumber" minOccurs="0" maxOccurs="1"/>
      <xsd:element ref="TaxReferenceNumber" minOccurs="0" maxOccurs="1"/>
