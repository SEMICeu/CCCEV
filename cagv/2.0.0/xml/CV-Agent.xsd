	<xsd:complexType name="ChannelType">
		<xsd:sequence>
			<xsd:element ref="ID" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Description" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Endpoint" minOccurs="0" maxOccurs="1"/>
			<xsd:element ref="AvailabilityRestriction" minOccurs="0" maxOccurs="unbounded"/>	
		</xsd:sequence>	
	</xsd:complexType>
	

	<xsd:complexType name="ContactPointType">
		<xsd:sequence>
			<xsd:element ref="Email" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Fax" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Telephone" minOccurs="1" maxOccurs="unbounded"/>
			<xsd:element ref="InternetAddress" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="Description" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element name="Channel" minOccurs="0" maxOccurs="unbounded"/>	
			<xsd:element name="AvailabilityRestriction" minOccurs="0" maxOccurs="unbounded"/>	
		</xsd:sequence>		
	</xsd:complexType>
	
	
	<xsd:complexType name="OpeningHoursSpecificationType">
		<xsd:sequence>
			<xsd:element name="Description" type="cbc:DescriptionType"/>
			<xsd:element ref="IntervalPeriod" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	
	<xsd:complexType name="OrganizationType">
		<xsd:complexContent>
			<xsd:extension base="org:OrganizationType">
				<xsd:sequence>
					<xsd:group ref="Agent"/>
					<xsd:element ref="cbc:Name" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element ref="lcn:Location"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>		
	</xsd:complexType>
	
