            <dcat-ap:accessURL>https://datos.gov.es/magistratura/sentencias/contratatacionpublica</dcat-ap:accessURL>
        </dcat-ap:distribution>
        <adms:identifier schemeID="EVIDENCE_ID" schemeAgencyID="SEMIC-CCCEV" schemeVersionID="2.0.1"><skos:notation xsi:type="xsd:normalizedString">EVIDENCE_2</skos:notation></adms:identifier>      
        <dct:creator/>
        <dcat-ap:landingPage>
                <foaf:topic>Superior Court Convictions</foaf:topic>
                <foaf:primaryTopic>Public Procurement-related Convictions</foaf:primaryTopic>
        </dcat-ap:landingPage>    
        <!-- This evidence supportsRequirement the concept id = 5f9f09f7-f701-432c-9fdc-c22c124a74c9 (Cleansing) --> 
        <cccev:supportsRequirement>5f9f09f7-f701-432c-9fdc-c22c124a74c9</cccev:supportsRequirement>           
    </Evidence>
